{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-12 build active file",
            "command": "/usr/bin/gcc-12",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/*.h",
                "-o",
                "${workspaceFolder}/build/main",
                "-lSDL2",
                "-lSDL2_image",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}